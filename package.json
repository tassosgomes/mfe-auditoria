{
  "name": "mfe-auditoria",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/*/*"
  ],
  "scripts": {
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "dev:api": "dotnet run --project services/audit-api/AuditApi/AuditApi.csproj",
    "dev:host": "npm --workspace apps/host run dev",
    "dev:users": "npm --workspace apps/mfe-users run dev",
    "dev:orders": "npm --workspace apps/mfe-orders run dev",
    "build:users": "npm --workspace apps/mfe-users run build",
    "build:orders": "npm --workspace apps/mfe-orders run build",
    "build:mfes": "npm run build:users && npm run build:orders",
    "preview:users": "npm --workspace apps/mfe-users run preview",
    "preview:orders": "npm --workspace apps/mfe-orders run preview",
    "dev:all": "npm run docker:up && (npm run dev:api & npm run dev:host & npm run dev:users & npm run dev:orders & wait)",
    "start:all": "npm run build:mfes && npm run docker:up && (npm run dev:api & npm run dev:host & npm run preview:users & npm run preview:orders & wait)",
    "dev": "npm run dev --workspaces --if-present",
    "build": "npm run build --workspaces --if-present",
    "preview": "npm run preview --workspaces --if-present"
  }
}
